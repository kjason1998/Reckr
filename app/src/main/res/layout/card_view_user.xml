<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/radius_card"
    app:cardElevation="@dimen/float_card"
    android:layout_marginTop="@dimen/top_margin_card"
    android:layout_marginHorizontal="@dimen/left_right_margin_card">

    <LinearLayout
        android:id="@+id/LLContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_default_height"
        android:layout_gravity="left"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/card_view_profile_picture"
            android:layout_width="@dimen/height_width_zero"
            android:layout_height="match_parent"
            android:src="@drawable/default_profile"
            android:layout_weight="1"
            android:padding="@dimen/padding_view_card"/>
        <LinearLayout
            android:layout_width="@dimen/height_width_zero"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="@dimen/padding_view_card">
            <TextView
                android:id="@+id/card_view_username"
                android:text="Username"
                android:textSize="@dimen/default_text_size_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/card_view_status"
                android:text="Status"
                android:textSize="@dimen/default_text_size_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>