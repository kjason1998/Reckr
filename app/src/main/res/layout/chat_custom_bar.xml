<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="@dimen/height_width_zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/chatBarUserNameDisplay"
                android:text="User's name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/chatBarUserStatusDisplay"
                android:text="Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/height_width_zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/default_padding">
            <RelativeLayout
                android:layout_width="@dimen/height_width_zero"
                android:layout_height="match_parent"
                android:layout_weight="3">

            </RelativeLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chatBarUserProfileImageDisplay"
                android:layout_width="@dimen/height_width_zero"
                android:layout_height="@dimen/default_chat_app_bar_profile_image"
                android:layout_weight="1"
                android:src="@drawable/default_profile"/>
        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>